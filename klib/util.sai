==========================================================================;
!! title Rtn Rpt.Str ;
! =========================================================================
=====================================+=====================================
=                                                                         =
=                                                                         =
=				Rtn Rpt.Str				  =
=                                                                         =
=                                                                         =
=====================================+=====================================


==========================================================================;


  internal simple string procedure Rpt.Str (string Str; integer Count);
  begin "Rpt.Str"
    string
      S;

    S _ null;

    while (Count) do
    begin
      appnd(S, Str);
      dcr(Count);
    end;

    return(S);
  end "Rpt.Str";


