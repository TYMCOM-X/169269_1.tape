!! title Rtn Suppress.Echo ;
! =========================================================================
=====================================+=====================================
=                                                                         =
=                                                                         =
=			     Rtn Suppress.Echo				  =
=                                                                         =
=                                                                         =
=====================================+=====================================


	Suppress echo-on-input to the terminal.


==========================================================================;


  internal simple procedure Suppress.Echo;
  begin "Suppress.Echo"
    start!code
      hrroi	1,'64;
      auxcal	1, '200;
    end;
  end "Suppress.Echo";


! ===================================+=====================================
==========================================================================;
!! title Rtn Restore.Echo ;
! =========================================================================
=====================================+=====================================
=                                                                         =
=                                                                         =
=			     Rtn Restore.Echo				  =
=                                                                         =
=                                                                         =
=====================================+=====================================


	Restore echo-on-input to the terminal.


==========================================================================;


  internal simple procedure Restore.Echo;
  begin "Restore.Echo"
    start!code
      hrroi	1, '64;
      auxcal	1, 0;
    end;
  end "Restore.Echo";


