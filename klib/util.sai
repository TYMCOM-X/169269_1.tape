!! title Rtn Ask.User ;
! =========================================================================
====================================+======================================
=                                                                         =
=                                                                         =
=			       Rtn Ask.User				  =
=                                                                         =
=                                                                         =
====================================+======================================


==========================================================================;


  internal simple boolean procedure Ask.User (string Str);
  begin "Ask.User"
    string Tmp;


    while (true) do
    begin
      if (SubStr(Tmp _ Prompt.User(Str), "Yes")) then
	return(true)
      else if (SubStr(Tmp, "No")) then
	return(false);
    end;
  end "Ask.User";


