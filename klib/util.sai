!! title Rtn GetTab ;
! =========================================================================
=====================================+=====================================
=                                                                         =
=                                                                         =
=				Rtn GetTab				  =
=                                                                         =
=                                                                         =
=====================================+=====================================


==========================================================================;


  internal simple integer procedure GetTab (integer Index, Table);
  begin "GetTab"
    own integer
      Val;


    start!code
      move	1, Table;
      hrl	1, Index;
      setom	!skip!;
      calli	1, '41;
       setzm	!skip!;
      movem	1, Val;
    end;

    return(Val);
  end "GetTab";


