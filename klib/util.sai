!! title Rtn Gfd.User.Name ;
! =========================================================================
=====================================+=====================================
=                                                                         =
=                                                                         =
=			     Rtn Gfd.User.Name				  =
=                                                                         =
=                                                                         =
=====================================+=====================================


==========================================================================;


  internal simple string procedure Gfd.User.Name;
  begin "Gfd.User.Name"
    own integer array
      LkB [0:30];
    own integer
      Chan;


    LkB[0] _ 30;
    LkB[1] _ xwd(1, 1);
    LkB[3] _ cvsix("UFD");
    LkB[2] _ GetTab(-1, 2);

    open(Chan _ getchan, "DSK", $F.ASCII, 0, 0, 0, 0, 0);
    chnior(Chan, LkB[0], 4);

    release(Chan);
    return(cv6str(LkB['27]) & cv6str(LkB['30]));
  end "Gfd.User.Name";


