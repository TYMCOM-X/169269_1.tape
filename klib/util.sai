! =========================================================================
=====================================+=====================================
=                                                                         =
=                                                                         =
=			       Rtn Form.Str				  =
=                                                                         =
=                                                                         =
=====================================+=====================================


==========================================================================;


  internal simple string procedure Form.Str (integer X, Width, Digits(0));
  begin "Form.Str"
    string Tmp;
    integer W;
    integer D;


    getformat(W, D);
    setformat(Width, Digits);
    Tmp _ cvs(X);
    setformat(W, D);
    return(Tmp);
  end "Form.Str";


