!! title Rtn Is.Numeric ;
! =========================================================================
====================================+======================================
=                                                                         =
=                                                                         =
=                             Rtn Is.Numeric                              =
=                                                                         =
=                                                                         =
====================================+======================================


	! <<  Does not support floating-point numbers.


==========================================================================;


  internal simple boolean procedure Is.Numeric (string Str);
  begin "Is.Numeric"
    integer Brk;


    return(length(Str) and
	length(Str) = length(scan(Str, Num.Tbl, Brk)));
  end "Is.Numeric";


