!! title Rtn Count.Lfs ;
! =========================================================================
====================================+======================================
=                                                                         =
=                                                                         =
=                             Rtn Count.Lfs                               =
=                                                                         =
=                                                                         =
====================================+======================================


==========================================================================;


  internal simple integer procedure Count.Lfs (string Str);
  begin "Count.Lfs"
    integer Brk;
    integer I;


    I _ 0;

    while (length(Str)) do
    begin
      scan(Str, Cpy.Tbl, Brk);

      if (Brk = lf) then
	inc(I);
    end;

    return(I);
  end "Count.Lfs";


