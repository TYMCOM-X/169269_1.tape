!! title Rtn Deposit.Str ;
! =========================================================================
====================================+======================================
=                                                                         =
=                                                                         =
=                            Rtn Deposit.Str                              =
=                                                                         =
=                                                                         =
====================================+======================================


==========================================================================;


  internal simple procedure Deposit.Str (string Str; integer Bpt, Cnt(0));
  begin "Deposit.Str"
    if (not Cnt) then
      Cnt _ length(Str);

    while (Cnt) do
    begin
      idpb(lop(Str), Bpt);
      dcr(Cnt);
    end;
  end "Deposit.Str";


