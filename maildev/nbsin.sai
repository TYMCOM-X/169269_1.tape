! ['50] Date - [ ASCII-String ] ;

node!pointer procedure Date( integer procedure Source );
  begin "date"

    node!pointer N;

    N := new!record( node );
    node:title[ N ] := "date";

    SetupPacket( Source );
    if ( PacketType neq '2 ) then
      node:link[N] := IgnorePacket( Source, "non-ASCII Date" )
    else
      node:link[N] := ASCII!String( Source );

    PopCount;

    return( N );

  end "date";
