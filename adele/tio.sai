	print( "TABFILL is ", auxclv( -1,-1,'31 ), crlf );
	return;
      end;
    Token _ TokenScan( NULL, false );
    if ( Token = NULL ) then return;
    case Match( Token, TABFILL!Options, false ) of
      begin
	[0]  OptionError( "TABFILL", Token );
	[1]  ListOptions( "TABFILL", TABFILL!Options );
	[2]  auxclv( -1, 0, '31 );
	[3]  auxclv( -1, 1, '31 );
	[4]  auxclv( -1, 2, '31 );
	[5]  auxclv( -1, 3, '31 )
      end;
  end;
